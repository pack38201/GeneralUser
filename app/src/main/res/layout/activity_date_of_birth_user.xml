<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegSupPhone">

    <TextView
        android:id="@+id/tvSupPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/relativeSupPhone"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="วันเกิดคุณคือวันที่เท่าไหร่"
        android:textColor="@color/colorButton"
        android:textSize="19dp" />

    <RelativeLayout
        android:id="@+id/relativeSupPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <EditText
            android:gravity="center"
            android:id="@+id/editPhoneSup"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:background="@drawable/roud_edit"
            android:inputType="date"
            android:singleLine="true"
            android:textSize="15dp"
            />

        <Button
            android:id="@+id/btPhoneSup"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_below="@+id/editPhoneSup"
            android:layout_marginTop="20dp"
            android:background="@drawable/roud_bt"
            android:text="ดำเนินการต่อ"
            android:textColor="#FFFFFF"
            android:textSize="19dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <TextView
        android:id="@+id/hasSupPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:clickable="true"
        android:onClick="onClick"
        android:text="คุณมีบัญชีอยู่แล้วใช่ไหม"
        android:textColor="@color/colorButton"
        android:textSize="11dp"
        tools:ignore="OnClick" />
</RelativeLayout>